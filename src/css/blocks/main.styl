.animate-item
  trn(.7s)
  tt(0, 100px)
  opacity 0
  &.add-animate
    tt(0, 0px)
    opacity 1

.slider-items
  trn(.7s)
  tt(0, 100px)
  opacity 0

#fullpage
  .section
    min-height: 500px

.height-125
  height 125px
.offset-padding--image-main
  padding-top 236px
  padding-bottom 127px
.image-main
  display flex
  margin 0 -24px
  .image-main--items
    padding 0 24px
    width calc(100% / 3)
    trn(.7s)
    tt(0, 100px)
    opacity 0
    &:hover
      .img-main--name
        c #f37e34
    a
      text-decoration none
      display block
    .img-main--name
      display block
      text-align center
      font-family: fa
      font-style: normal
      font-weight: 700
      font-size: 24px
      line-height: 32px
      color: #191919
      margin-top 24px
      trn(.1s)
    .img-wrapper
      display block
      position relative
      max-width 360px
      width 100%
      height 360px
      overflow hidden
      img
        position absolute
        top 50%
        left 50%
        width 100%
        height auto
        tt(-50%, -50%)

