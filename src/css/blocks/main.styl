// Slider

.home-slider
  position relative
  .slick-list
    padding 30px 0
  
  .slick-arrow
    position absolute
    top 50%
    margin-top -24px
    z-index 100
    cursor pointer
    &.slider-home--prev
      left -65px
    &.slider-home--next
      right -65px
      img
        transform: rotateZ(180deg)

.slider-items
  position relative
  // box-shadow: 0px 14px 45px rgba(136, 136, 136, 0.25)
  margin 24px

  .slider-items--img
    position relative
    max-width 360px
    margin 0 auto
    overflow hidden
    brr(4px)
    box-shadow: 0 0 20px 6px rgba(136,136,136,.25)
  img
    position relative
    max-width 100%
    // box-shadow: 0px 14px 45px rgba(136, 136, 136, 0.25)


// Blog

.blog-main
  padding-top 220px
  padding-bottom 210px

.blog-main--wrapper
  max-width 1074px

.wrapper-button--blog
  padding-top 105px
  text-align center

.blog-main--items
  display flex
  &:not(:last-child)
    margin-bottom 115px

.blog-img--link
  position relative
  display block
  min-width 400px
  max-width 400px
  width 100%
  height 300px
  overflow hidden
  box-shadow: 0px 14px 45px rgba(136, 136, 136, 0.25)
  margin-right 100px
  img
    position absolute
    top 50%
    left 50%
    width 100%
    height 100%
    object-fit: cover
    tt(-50%, -50%)

.blog-main--items-text
  position relative
  
  h3,
  h3 a
    font-family: fa
    font-style: normal
    font-weight: bold
    font-size: 48px
    line-height: 60px
