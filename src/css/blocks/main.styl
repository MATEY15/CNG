// Slider

.home-slider
  position relative
  .slick-list
    padding 30px 0
  
  .slick-arrow
    position absolute
    top 50%
    margin-top -24px
    z-index 100
    cursor pointer
    &.slider-home--prev
      left -65px
    &.slider-home--next
      right -65px
      img
        transform: rotateZ(180deg)

.slider-items
  position relative
  // box-shadow: 0px 14px 45px rgba(136, 136, 136, 0.25)
  margin 24px
  overflow hidden
  brr(4px)
  box-shadow: 0 0 20px 6px rgba(136,136,136,.25)
  img
    position relative
    max-width 100%
