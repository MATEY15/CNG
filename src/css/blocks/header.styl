// Button Header

.pulse-button
	position absolute
	display flex
	align-items center
	justify-content center
	bottom -165px
	right -65px
	width 200px
	height 200px
	background #fff
	brr(50%)
	opacity 0

	&:before
		-webkit-transform: scale(1)
		transform: scale(1)
		-webkit-animation: pulse 5s 2s infinite ease-out
		animation: pulse 5s 2s infinite ease-out

	&:after
		-webkit-transform: scale(1.15);
		transform: scale(1.15);
		-webkit-animation: pulse 4s 1s infinite ease
		animation: pulse 4s 1s infinite ease
	
	&:before, &:after
		content: ''
		position: absolute
		top: -25px
		left: -25px
		width: 250px
		height: 250px
		border: 1px solid rgb(255 255 255)
		box-shadow: 0 0 20px 1px rgba(255, 255, 255, .7) inset
		border-radius: 50%
		z-index: 100

@-webkit-keyframes pulse
	0% {
		-webkit-transform: scale(0.6);
		transform: scale(0.6);
		opacity: 0;
	}

	90% {
		-webkit-transform: scale(1);
		transform: scale(1);
		opacity: 1;
	}

	100% {
		-webkit-transform: scale(1);
		transform: scale(1);
		opacity: 0;
	}

@keyframes pulse
	0%
		-webkit-transform: scale(0.6)
		transform: scale(0.6)
		opacity: 0

	90%
		-webkit-transform: scale(1)
		transform: scale(1)
		opacity: 1

	100%
		-webkit-transform: scale(1)
		transform: scale(1)
		opacity: 0