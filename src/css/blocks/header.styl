.header
	padding-top 26px
	
	.flex-container
		display flex
		flex-wrap wrap
		flex-direction row
		justify-content space-between
		min-height 75px

.top-menu--wrapper
	flex-grow 1
	padding-left 115px
	padding-top 28px

.top-menu
	display flex
	flex-direction row
	li
		position relative
		&:not(:last-child)
			margin-right 42px
		&:before
			position absolute
			bottom -6px
			left 0
			content ''
			width: 28px
			height: 2px
			background-color: #27aec2
			opacity 0
			visibility hidden
			trn(.15s)
		&.active:before,
		&:hover:before
			opacity 1
			visibility visible
		a
			color: #52565f
			font-family: mr
			font-size: 14px
			text-decoration none

.phone-head
	padding-top 28px

.phone-link
	color: #52565f
	font-family: mb
	font-size: 14px
	text-decoration none
	display flex
	flex-direction row
	align-items center
	
	& .icon-phone
		margin-right 8px