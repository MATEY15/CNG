.button
	display inline-block
	min-width 135px
	text-align center
	c #fff
	font-family: fa
	font-style: normal
	font-weight: normal
	font-size: 17px
	line-height: 28px
	text-decoration none
	background:#F15002
	border-radius 14px
	padding 12px 24px
	cursor pointer
	transition all .15s ease-out
	&.button-gray
		background #808080
		&:hover
			background #F15002
	&:hover
		background: #F37E34
		