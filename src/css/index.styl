@import ("../../libs/template/reset.css")
@import ("../../libs/template/lib")
@import ("../../libs/template/media")

@import ("libs/*.css")
@import ("fonts")
@import ("blocks/**/**")
@import ("constructor/**/**")

*
	box-sizing border-box

html
	// background: cBlack

body
	position relative
	overflow-x: hidden
	min-width 320px
	// background: #e3e
	&.overflow
		overflow hidden

#overlayer
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index 11
	background cBlack

main
	position relative
	z-index 100
	background #E6E8E6

.align-right
	float right
.align-left
	float left

h1, h2, h3, h4, h5, h6
	font-family: fa
	font-weight 700

h1
	font-size 32px
h2
	font-size 28px
h3
	font-size 26px
h4
	font-size 22px
h5
	font-size 18px
h6
	font-size 16px

.container
	box-sizing border-box
	max-width 1160px
	width 100%
	padding-left 10px
	padding-right 10px
	margin 0 auto
	@media screen and (max-width: 640px)
		padding-left 20px
		padding-right 20px
	
.heading-h2
	color cBlack
	font-family: fPoppinsSemiBold
	font-size 32px
	text-align center
	@media screen and (max-width: 640px)
		font-size 28px
		br
			display none
